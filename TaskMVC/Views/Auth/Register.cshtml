@model TaskMVC.Dto_s.RegisterDto;

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            user-select: none;
        }

        body {
            height: auto;
            width: auto;
            margin: 0px;
            padding: 0px;
            font-family: sans-serif;
            background: url(https://img.freepik.com/free-photo/natures-beauty-reflected-tranquil-mountain-waters-generative-ai_188544-7867.jpg?w=1060&t=st=1698734006~exp=1698734606~hmac=1034080024f0210ea9dc746cc3ae703cc0f94e858e4c6bda57a7ee92386018a2) no-repeat;
            background-size: cover;
        }

        .login-box {
            width: 280px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }

            .login-box h1 {
                float: left;
                font-size: 40px;
                border-bottom: 6px solid;
                margin-bottom: 50px;
                padding: 13px 0;
            }

        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border-bottom: 2px solid;
            transition: .5s ease-in-out;
        }

            .textbox:hover {
                border-bottom: 2px solid gray;
            }

            .textbox i {
                color: white;
                width: 26px;
                float: left;
                text-align: center;
            }

            .textbox input {
                cursor: pointer;
                border: none;
                outline: none;
                background: none;
                color: gray;
                font-size: 18px;
                width: 80%;
                float: left;
                margin: 0 10px;
            }

        .btn {
            width: 100%;
            background: none;
            border: 2px solid white;
            color: white;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 12px 0;
            outline: none;
            transition: .5s ease-in-out;
        }

            .btn:hover {
                box-shadow: 5px 5px gray;
                border: #808080 solid 2px;
                background-color: none;
                content:
            }

        input::placeholder {
            color: white;
        }

        input:focus {
            color: gray;
        }

        .footer {
            background: white;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            transition: background-color 5500s ease-in-out 0s;
            -webkit-text-fill-color: white !important;
        }
    </style>
</head>
<body translate="no">
    <form asp-controller="Auth" asp-action="Register" method="post" enctype="multipart/form-data" class="col-md-6" style="margin: 5px auto;">
        <div class="login-box">
            <h1>Register</h1>
            <div class="textbox">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <input asp-for="Name" type="text" id="form2-email" placeholder="Name">
            </div>

            <div class="textbox">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <input asp-for="Email" type="text" id="form2-email" placeholder="Email">
            </div>

            <div class="textbox">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <input asp-for="Passwword" type="text" id="form3-password" placeholder="Password">
            </div>
            <div class="textbox">
                <i class="fa fa-lock" aria-hidden="true"></i>
                <select asp-for="Role" class=" form-control"> 
                    <option> Admin</option>
                    <option> User</option>
                @* <input asp-for="Role" type=ba id="form3-password" placeholder="Role"> *@

                </select>
            </div>

            <button asp-controller="Auth" asp-action="Register" type="submit" class="btn btn-pill btn-outline-info" style="width: 100%;">
                <i class="fa fa-sign-in mr-1"></i> Register
            </button>
            <button asp-controller="Auth" asp-action="Login" type="submit" class="btn btn-pill btn-outline-info" style="width: 100%;">
                <i class="fa fa-sign-in mr-1"></i> Login
            </button>

        </div>
    </form>
</body>


